{
  "name": "codeforces-ide",
  "version": "1.0.0",
  "description": "A sleek Python IDE for Codeforces competitive programming",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build:installer": "electron-builder --win nsis",
    "package": "electron-packager . CodeforcesIDE --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "author": "Codeforces IDE",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.codeforces.ide",
    "productName": "Codeforces IDE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "default-snippets.json",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "codeforces_solution.py",
        "to": "codeforces_solution.py"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "CodeforcesIDE-${version}.exe"
    }
  }
}
